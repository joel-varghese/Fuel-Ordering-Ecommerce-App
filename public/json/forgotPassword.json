{
  "module": {
    "id": "1A",
    "value": "ForgotPassword",
    "name": "Forgot Password"
  },
  "content": {
    "forgotData": {
      "content": {
        "passwordHeadingOne": {
          "headline": {
            "text": "Forgot Password"
          }
        },
        "primaryFields": [
          {
            "fieldType": "input",
            "dataType": "email",
            "fieldLabel": "Email Address",
            "placeHolder": "Email Address",
            "maxLength": "50",
            "name": "emailaddress",
            "isRequired": true,
            "textAlign": "left",
            "className": "extra-padding-left",
            "validations": [
              {
                "validation": "IsMandatory",
                "message": ""
              },
              {
                "validation": "CheckRegex",
                "validateRule":  "^(([^<>()[\\]\\.,;:\\s@\"]+(\\.[^<>()[\\]\\.,;:\\s@\"]+)*)|(\".+\"))@((\\[[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\.[0-9]{1,3}\\])|(([a-zA-Z\\-0-9]+\\.)+[a-zA-Z]{2,}))$",
                "message": "Oops! Invalid E-mail"
              }
            ]
          }
        ],
        "externallink": {
          "helpLink": {
            "fieldType": "link",
            "dataType": "",
            "fieldLabel": "Help",
            "text":"Help Text content Help text content",
            "href": "#"
          },
          "loginBtn": {
            "fieldType": "Button",
            "dataType": "text",
            "fieldLabel": "Reset Password",
            "validations": [],
            "placeHolder": "Reset Password",
            "tooltip": {
              "text": ""
            },
            "name": "confirmBtn"
          },
          "serviceMessage": {
            "emailNotFound": "If you're a registered user, you will be receiving an email with a password reset link.",
            "mandatoryField": "Please verify. A required field is missing information",
            "successContent": "If you're a registered user, you will be receiving an email with a password reset link."
          },
          "copyright": {
            "text": "Copyright Â© 2022 Barrel Fuel"
          },
          "modalContent": {
            "modalBtn": "Ok"
          },
          "emailBody": {
            "title": "Forgot your password",
            "paragraph": "Hello",
            "redirectURI": "set-password?",
            "html":"Forgot your password? <br><br> We received a request to reset the password for your account. <br><br>To reset your password, click on the button below <br><br> : <br><br> # Or copy and paste the URL into your browser.<br>"
          }
        }
      }
    }
  }
}